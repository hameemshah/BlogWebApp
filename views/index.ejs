<%- include("partials/header.ejs") %>

    <!-- Page Header-->
    <header class="masthead" style="background-image: url('/assets/img/home-bg.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>Knowledge Gate</h1>
                        <span class="subheading">A Knowledge blog portal</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main Content-->
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <% if (locals.posts) %>
                <% posts.forEach(post => { %>
                <!-- Post preview-->
                <div class="row post-preview">
                    <div class="col-1">
                        <img src="<%= post.thumbnail %>" alt="thumb" width="50px" class="thumbnail">
                    </div>
                    <div class="col-9" style="margin-left: 1rem;">
                        <a href="/post/<%= post.id %>">
                            <h2 class="post-title"><%= post.title %></h2>
                        </a>
                        <h6 class="post-subtitle"><%= post.subtitle %></h6>
                    </div>
                    <% if (user && user.id === post.user_id) { %>
                    <div class="col-1" style="display: flex; flex-direction: column; justify-content: space-between;">
                        <a href="/edit/<%= post.id %>"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="/delete/<%= post.id %>"><i class="fa-solid fa-trash"></i></a>
                    </div>
                    <% } %>
                    <p class="post-meta">
                        Posted by
                        <%= post.author %>
                        on <%=post.day%>-<%=post.month%>-<%=post.year%>
                    </p>
                </div>
                <!-- Divider-->
                <hr class="my-4" />
            <% }); %>
                <!-- Pager
                <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older
                        Posts â†’</a></div> -->
            </div>
        </div>
    </div>
    <%- include("partials/footer.ejs") %>