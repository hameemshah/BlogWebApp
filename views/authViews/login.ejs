<%- include("./partials/header.ejs") %>
    <!-- Login Section -->
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body p-4">
                        <h2 class="text-center mb-4">Login</h2>
                        <form method="post" action="/auth/login">
                            <div class="mb-3">
                                <label for="username" class="form-label">Email</label>
                                <input type="text" class="form-control" id="username" placeholder="Enter your login email . . ." name="username" min="3" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" placeholder="Enter your login password" id="password" name="password" min="3" required>
                            </div>
                            <div style="font-size: medium; color: gray;">Don't have an account? <a href="/auth/signup" style="color: red;" >Signup here</a></div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </div>
                        </form>
                        
                        <div class="text-center my-3">or</div>
                        
                        <div class="d-grid gap-2">
                            <a href="/auth/google" class="btn btn-danger"><i class="fa-brands fa-google"></i></i> Login with Google</a>
                            <a href="/auth/facebook" class="btn btn-primary"><i class="fa-brands fa-facebook"></i> Login with Facebook</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include ("./partials/footer.ejs") %>